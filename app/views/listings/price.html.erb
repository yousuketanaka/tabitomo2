<%= render 'partial/navbar' %>
<div class="container">
	<div class="row row-space">
	    <div class="col-md-3">
	        <!-- vertical-navbar -->
	        <%= render 'partial/verticalnavbar'%>
	    </div>
	    <div class="col-md-9">
	        <div class="panel panel-success">
	            <div class="panel-heading">
	                <div class="text-center">
	                    <span style="font-size:24px;">料金の設定</span>
	                </div>
	            </div>

	            <div class="panel-body">

	                <%= form_for @listing do |f| %>
                        <div class="form-group">
                          <label>一サービスあたりの料金</label>
                          <div class="input-group">
                            <div class="input-group-addon">円</div>
                            <%= f.text_field :price_setting, placeholder: "例: 3,000", class: "form-control", required: "true" %>
                          </div>
                        </div>
                        <span class="glyphicon glyphicon-chevron-right"></span><a class="warning" href="http://ja.exchange-rates.org/">自国通貨に計算し直す場合には、こちらのコンバーターをご利用ください。</a>
                        <div class="actions" style="margin-top:30px;">
                            <%= f.submit "更新", class: "btn btn-danger" %>
                        </div>
	                <% end %>
	            </div>
	        </div>
	    </div>
	</div> <!-- end of row -->
</div>