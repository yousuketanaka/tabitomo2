        </li>
        <li class="<%= "active" if controller?("listings") && action?("calendar") %> list-group-item">
          <%= link_to "予約カレンダーの設定", manage_listing_calendar_path(@listing) %>
        </li>
        <li class="<%= "active" if controller?("listings") && action?("bankaccount") %> list-group-item" id="nav-bankaccount">
