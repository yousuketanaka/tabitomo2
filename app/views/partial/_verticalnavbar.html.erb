        </li>
        <li class="<%= "active" if controller?("listings") && action?("price") %> list-group-item" id="nav-price">
          <%= link_to "料金設定", manage_listing_price_path(@listing) %>
        </li>
        <li class="<%= "active" if controller?("listings") && action?("photos") %> list-group-item" id="photos">
