<%= render 'partial/navbar' %>

<div class="container">
	<div class="row row-space">
		<div class="col-lg-3 col-md-4">
			<div class="user-profile row-space-4 text-center">
				<h3><%= @user.name %></h3>
				<%= @user.image %>
			</div>

			<div class="panel panel-default verifications hidden-xs hidden-sm">
				<div class="panel-heading">
					認証済みID
				</div>
				<div class="panel-body">
					<div id="ver-email">メールアドレス</div>
					<hr>
					<div id="ver-tel">電話番号</div>
					<hr>
					<div id="ver-facebook">Facebook</div>
					<hr>
				</div>
			</div>
		</div>

		<div class="col-lg-9 col-md-8 col-sm-12">
			<h4>プロフィール</h4>
		</div>
	</div>  	
</div>

<script>
	$(function(){
		<% if !@user.email.blank? %>
		 $("#ver-email").attr("class","verification-checked");
		<% end %>

		<% if !@user.phone_number.blank? %>
		 $("#ver-tel").attr("class","verification-checked");
		<% end %>

		<% if !@user.provider == "facebook" %>
		 $("#ver-facebook").attr("class","verification-checked");
		<% end %>
	});
</script>